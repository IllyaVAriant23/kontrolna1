
#include <stdio.h>
#include <math.h>

int main() {
    double x;
    double il;

    printf("Введіть значення x: ");
    scanf("%lf", &x);

    if (x <= 2) {
        il = pow(x, 2) + 5 * x - 6;
    } else {
        il = fabs(x + cos(x));
    }

    printf("Значення функції f(x): %lf\n", il);

    return 0;
}
